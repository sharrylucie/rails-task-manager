<h1>Task manager</h1>

<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= check_box_tag :accept, 1, task.completed, disabled: true %>
      <%= link_to "#{task.title}", task_path(task) %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
<% end %>
<%= link_to "Create a new task", new_task_path %></li>
